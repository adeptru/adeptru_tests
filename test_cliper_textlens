import pyperclip
print ('...убедитесь, что в буфере обмена уже находится текст!..')
print('---------------------------------------------------------------------------------------')
s=pyperclip.paste()
n=len(s)
s=s.replace('\n','') # исключить переносы строк 
s=s.replace('\r','')
n1=len(s)
s=s.replace(' ','') # исключить пробелы
s=s.replace('	', '')
n2=len(s)
s=s.replace(',', '') # исключить снаки препинания
s=s.replace('.', '')
s=s.replace(':', '')
s=s.replace(';', '')
s=s.replace('-', '')
s=s.replace('!', '')
s=s.replace('?', '')
s=s.replace('_', '')
n3=len(s)
print('общее кол-во символов - '+str(n))
print('кол-во символов с пробелами - '+str(n1))
print('кол-во символов без пробелов - '+str(n2))
print('кол-во символов без знаков препинания - '+str(n3))
print('----------------------------------------------------------------------------------------')
print(pyperclip.paste())
